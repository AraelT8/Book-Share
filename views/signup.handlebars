<body>
  <header>
    <nav>
      <div class="navbar">
        <i><h1 class="title">BookShare</h1></i>
        <div class="navLinks">
          <b><a href="home">Home</a></b>
          <b><a href="signin">Sign-IN</a></b>
        </div>
      </div>
    </nav>
  </header>

  <form class="signup-form">
    <div>
      <label for="username-signup">Username:</label>
      <input type="text" id="username-signup" name="username" />
    </div>
    <div>
      <label for="email-signup">Email:</label>
      <input type="email" id="email-signup" name="email" />
    </div>
    <div>
      <label for="password-signup">Password:</label>
      <input type="password" id="password-signup" name="password" />
    </div>
    <div>
      <button type="submit">Sign Up</button>
    </div>
  </form>

  <script src="/js/login.js"></script>
</body>
